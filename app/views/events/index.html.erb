index.html.erb
<%= link_to 'New event', new_event_path %>
<h1>Listing events</h1>

<table>
  <tr>
    <th>name</th>
    <th>description</th>
    <th>date</th>
    <th>location</th>
    <th>img</th>
    <th>max_group</th>
    <th>max_per_group</th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.date %></td>
      <td><%= event.location %></td>
      <td><%= event.img %></td>
      <td><%= event.max_group %></td>
      <td><%= event.max_per_group %></td>
      <td>
      	<% if event.attends.find_by(user: @user)%>
      	<button type="button" disabled>joined</button>
				<% end %>
      </td>
      <td><%= link_to 'Show', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= Attend.where(event:event.id).length %></td>
      <td><%= event.developer.to_i * event.max_group.to_i + event.ux.to_i * event.max_group.to_i %>
    </tr>
  <% end %>
</table>