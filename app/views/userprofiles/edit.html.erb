<h1>Edit Profile</h1>

<%= form_with scope: :userprofile, model: @userprofile, local: true do |form| %>
  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

    <p>
    <%= form.label :img %><br>
    <%= form.text_field :img %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back', root_path %>