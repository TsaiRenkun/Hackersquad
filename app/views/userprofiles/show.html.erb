<h1 class = "header">Your Profile</h1>

<div class = "userinfocontainer">
	<div>
		<%= cl_image_tag(@userprofile.img, :class => "userimg")%>
	</div>
	<div class = "userdescription">
	  <h1>Username: <%= @userprofile.username %></h1>
	  <h1>Description: <%= @userprofile.description %></h1>
	  <% if @userprofile.id == current_user.id %>
	  <a href= <%= edit_userprofile_path(@userprofile) %> class = "btn btn-primary edit" >Edit your Profile</a>
	  <% end %>
	</div>
</div>
<%= link_to 'Back', root_path %>