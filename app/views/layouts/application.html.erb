<!DOCTYPE html>
<html>
  <head>
    <title>Hackersquad</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>

  <body>
				<div>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <a class="navbar-brand" href="/"><img src="#" width="60" height="60" class="d-inline-block align-center" alt="" >HACKER SQUAD</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                 <% if user_signed_in? %>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Overview <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href= "/userprofiles/<%=current_user.id%>" >Profile <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Overview <span class="sr-only">(current)</span></a>
                            </li>
                        </ul>
                  <% end %>
                        <span class="navbar-text">Get your Squads.</span>
                        <span class="nav-item">
                        	<% if !user_signed_in? %>
                            <a class="nav-link" href="/users/sign_in">Login</a>
                          <% end %>
                        </span>
                        <span class="nav-item">
                        	<% if !user_signed_in? %>
                            <a class="nav-link" href="/users/sign_up">Register</a>
                          <% end %>
                        </span>
                        <span class="nav-item">
                        	<% if user_signed_in? %>
                            <%= link_to 'log out', destroy_user_session_url, method: :delete %>
                          <% end %>
                        </span>
                    </div>
                </nav>
            </div>
            <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <%= yield %>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>